{
    "include": [
        "src/*",
    ],
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "outDir": "dist",
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "lib": [
            "ES2020"
        ],
    }
}